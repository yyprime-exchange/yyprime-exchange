{
  "name": "@yyprime/monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yyprime-exchange/yyprime-exchange.git"
  },
  "scripts": {
    "lint": "eslint --cache --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "solana:local": "solana config set --url http://localhost:8899",
    "solana:devnet": "solana config set --url https://api.devnet.solana.com",
    "solana:mainnet": "solana config set --url https://ssc-dao.genesysgo.net/",
    "frontend:start": "yarn workspace @yyprime/frontend start",
    "frontend:build": "yarn workspace @yyprime/frontend build",
    "yyx-program:dev": "yarn workspace @yyprime/yyprime-exchange-ts dev",
    "yyx-program:build": "yarn workspace @yyprime/yyprime-exchange-ts build",
    "cargo:test": "cargo test",
    "anchor:test": "anchor test",
    "anchor:build": "anchor build",
    "anchor:build_release": "cargo build-bpf --features production",
    "anchor:deploy": "anchor deploy",
    "watch": "yarn ts-node-dev --respawn",
    "crank": "yarn workspace @yyprime/yyprime-exchange-ts build && npx ts-node scripts/crank.ts",
    "create-sim": "yarn workspace @yyprime/yyprime-exchange-ts build && npx ts-node scripts/create-simulation.ts",
    "sim": "yarn workspace @yyprime/yyprime-exchange-ts build && npx ts-node scripts/simulator.ts",
    "mon": "yarn workspace @yyprime/yyprime-exchange-ts build && npx ts-node scripts/monitor.ts"
  },
  "dependencies": {
    "@project-serum/anchor": "^0.18.2",
    "@yyprime/yyprime-exchange-ts": "file:packages/yyprime-exchange-ts",
    "postinstall": "^0.7.4"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.0.7",
    "@types/mocha": "^9.0.0",
    "@types/numeral": "^2.0.2",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "patch-packages": "^1.0.0",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.3.5"
  }
}
